<%= form_for(@article) do |f| %>
	<ul>
	  <% @article.errors.full_messages.each do |error| %>
	    <li><%= error %></li>
	  <% end %>
	</ul>

	<div class="form-group">
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<%= f.label :body %><br />
		<%= f.text_field :body %>
	</div>

	<div class="form-group">
		<%= f.label :tag_list %><br />
		<%= f.text_field :tag_list %>
	</div>

	<div class="form-group">
		<%= f.submit %>
	</div>
<% end %>