<h4>Post a comment</h4>
<p>
	<%= form_for [@article, @comment] do |f| %>
		<div class="form-group">
			<%= f.label :author_name, "Your Name" %>
			<%= f.text_field :author_name %>
		</div>

		<div class="form-group">
			<%= f.label :body, "Your Comment" %>
			<%= f.text_area :body %>
		</div>

		<div class="form-group">
			<%= f.submit %>
		</div>
	<% end %>

</p>